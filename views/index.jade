include schedules
extends layout
block prenav
  .index
block content
  #index
    #hero
      #hero-title
    #portal
      a.box(href="/kurs")
        .image(style="background-image: url(/img/kurs.jpg)")
        .inner-box
          h1= portal.courses
      a.box(href="/lokaler")
        .image(style="background-image: url(/img/lokaler.jpg)")
        .inner-box
          h1= portal.location
      a.box(href="/hvaskjer")
        .image(style="background-image: url(/img/hvaskjer.jpg)")
        .inner-box
          h1= portal.whats_happening
      a.box(href="/om")
        .image(style="background-image: url(/img/manning.jpg)")
        .inner-box
          h1= portal.about
      a.box(href="/musikk")
        .image(style="background-image: url(/img/musikk.jpg)")
        .inner-box
          h1= portal.music
    #about
      .about-box
        .blurb!= club_overview_text.fields.text
    #feed
      .content
        h1= news_stream
        .stories
          each story in stories
            .news
              a.story(href=story.link) #{story.story} 
                if story.link
                  .fa.fa-external-link-square
              .date #{story.date[locale]}
      .content.wider
        .halfbox
          h2= weekly_schedule
          each day in schedule.fields.days
            mixin day(day)
        .halfbox.map
          h2 #{asylbarnehagen.fields.title}
          .map
          .explanation !{asylbarnehagen.fields.directions}
