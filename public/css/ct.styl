@import 'nib'

cs_col1 = #BD4932 // colour
cs_col2 = #FFFAD5 // light fg
cs_col3 = #FFD34E // less light fg
cs_col4 = #DB9E36 // colour
cs_col5 = #105B63 // colour
cs_col6 = #211f1c // dark bg

body,html
  margin 0px
  padding 0px

#hero
  width 100%
  height 500px
  background-image url(/img/dd.jpg)
  background-size cover
  background-position center center
  position relative
  
  #hero-title
    background-image url(/img/title.svg)
    background-size contain
    background-position center
    background-repeat no-repeat
    width 65%
    height 100%
    margin 0 auto

#nav
  width 100%
  height 80px
  background-color cs_col2
  color cs_col6
  font-family "Brandon Grotesque"
  font-size 22px

  .left
    float left
    height 80px
    padding-left 20px
    .logo
      background-image url(/img/ct_new_nothe.svg)
      background-size contain
      background-repeat no-repeat
      background-position left center
      width 100px
      height 60px
      margin 10px 20px
  .right
    float right
    height 80px
    text-align right
    padding-right 20px

  .nav
    .item
      vertical-align top
      display inline-block
      height 80px
      line-height 80px
      padding 0px 20px

#portal
  background-color cs_col5
  width 100%
  padding 80px 20%
  box-sizing border-box
  clearfix()
  background-image url(/img/ct_new_subtle.svg)
  background-size 140%
  background-position 50% 50%
  background-repeat no-repeat

  padding-bottom 80px + 240px

  .box
    width 47%
    height 400px
    background-color cs_col4
    color cs_col3
    text-align center
    font-size 22px
    font-family "Brandon Grotesque"
    font-weight normal
    margin-top 50px
    clear none
    position relative
    background-color cs_col2
    &:hover
      background-color cs_col3

    .image
      width 100%
      height 100%
      position absolute
      left 0px
      top 0px
      background-position center
      background-repeat no-repeat
      background-size cover
      opacity 0.5

    .inner-box 
      color cs_col6
      width 80%
      height 40%
      border 6px solid cs_col6
      position absolute
      top 30%
      left 10%
      box-sizing border-box

      h1
        margin 0px
        height 50px
        line-height 50px
        text-align center
        position absolute
        top 50%
        width 100%
        margin-top -25px


    &:nth-child(2n)
      float right
    &:nth-child(2n-1)
      float left
    &:nth-child(1)
      margin-top 0px
    &:nth-child(2)
      margin-top 150px

    h1
      margin 0px

#kurs #about
  width 100%
  padding 80px 20%
  box-sizing border-box
  background-color cs_col2

  h1
    font-size 54px 
    font-family "Playfair Display"
    font-style italic

  p
    padding 0px 5%
    font-family "Brandon Grotesque"
    font-size 28px
    line-height 36px

  .registration
    display inline-block
    padding 15px 40px
    margin 20px 0px
    font-size 36px
    border 5px solid cs_col1
    font-family "Brandon Grotesque"
    font-weight bold
    &:hover
      color cs_col2
      background-color cs_col1

#kurs #levels
  width 100%
  padding-bottom 80px
  background-color cs_col2
  color cs_col6 
  clearfix()

  font-family "Brandon Grotesque"
  font-size 22px

  .main-overview
    padding 0px 5%
    font-family "Brandon Grotesque"
    font-size 28px
    line-height 36px
  .halfbox
    background-color cs_col3
    color cs_col6

#index #about
  width 100%
  display block
  position relative
  height 0px
  overflow visible

  .about-box
    color cs_col6
    background-image url(/img/fun.jpg)
    background-position center
    background-size cover
    font-family "Playfair Display"
    font-style italic
    font-size 32px
    text-align center
    width 80%
    margin-left -40%
    box-sizing border-box
    padding 20px 50px
    height 400px
    position absolute
    left 50%
    top -200px
    outline 6px solid cs_col6
    outline-offset 40px


    .blurb
      width 50%
      margin 0 auto
      padding 80px 0px

.content + .content
  margin-top 80px
.content
  h1
    font-family "Playfair Display"
    font-style italic
    font-size 54px
    
  width 60%
  margin 0 auto

  clearfix()

  &.wider
    width 80%

#feed
  padding 80px 0px
  padding-top 240px + 80px
  width 100%
  background-color cs_col1
  clearfix()

  .content
    color cs_col2

    .stories
      padding 20px
      border-left 1px solid cs_col3

    .news
      margin-bottom 40px
      &:last-child
        margin-bottom 0px
      .story
        font-family "Playfair Display"
        font-size 22px
        font-style italic
        color inherit
        text-decoration none

        .fa
          display inline-block
          margin-left 10px
          opacity 0.75
          font-size 0.8em
          color inherit

      .date 
        font-family "Brandon Grotesque"
        font-size 16px
        color cs_col3
        position relative
        padding-left 20px
        margin-top 8px
        &:before
          content ''
          position absolute
          width 30px
          left -21px
          top 50%
          height 10px
          margin-top -10px
          border-bottom-left-radius 5px
          border-bottom 1px solid cs_col3
          border-left @border-bottom

#timeplan 
  width 100%
  padding 80px 0px
  background-color cs_col1
  color cs_col2

  h2
    font-family "Brandon Grotesque"
    font-weight bold
    font-style normal

  .set
    font-size 24px

    .time
      width 100px

    .location
      display block
      margin-top -4px
      margin-bottom 6px
      margin-left 105px
      opacity 0.5
      font-size 0.6em

  .halfbox:nth-of-type(2)
    margin-top 100px


.halfbox
  width 48%
  margin-right 5px
  box-sizing border-box
  border 6px solid cs_col3
  padding 40px

  &:nth-of-type(1)
    float left
  &:nth-of-type(2)
    float right
    margin-top 200px

  h2, h3
    font-family "Playfair Display"
    margin-top 0px
    font-weight 200
    font-style italic
  h2
    font-size 42px
  h3
    font-size 26px
    margin-bottom 6px
    margin-top 20px

  .map
    background-image url(/img/location.png)
    background-size cover
    background-position center
    width 100%
    height 350px
    opacity 0.5
    margin-bottom 40px

  .explanation
    color cs_col3
    font-family "Brandon Grotesque"

  .set
    font-family "Brandon Grotesque"
    font-size 18px

    .time 
    .desc
    .location
      display inline-block
      margin-right 5px

    .location:before
      font-size 0.6em

    .location
      font-size 0.8em
      opacity 0.7

    .time
    .location
      color cs_col3

    .time
      font-weight bold
      width 70px

#contact
  background-color cs_col6
  color cs_col3
  width 100%
  box-sizing border-box
  position relative

  .bg
    position absolute
    width 100%
    height 100%
    left 0px
    right 0px
    background-image url(/img/bergen-foot.jpg)
    background-position center
    background-size cover
    opacity 0.1
      
  .not-bg
    padding 80px 20%
    z-index 10
    position relative

  h1
    font-family "Playfair Display"
    font-size 54px
    font-style italic

  .contact-bits
    text-align center

  .social-bits
    text-align center
    margin-top 40px
    border-top 2px solid cs_col1
    padding-top 80px
    .bit
      color cs_col2
      border 5px solid cs_col1
      padding 20px 30px
      font-size 42px
      display inline-block
      margin 0px 20px
      text-decoration none
      &:hover
        background-color cs_col1


  .or
    font-size 24px
    font-family "Playfair Display"
    font-style italic
    font-weight bold
    transform skew(12deg, -7deg)

  .email
  .list
    color cs_col2
    display inline-block
    padding 15px 40px
    border 5px solid cs_col3
    text-decoration none
    font-family "Brandon Grotesque"
    font-size 32px
    margin 40px 0px

    &:hover
      background-color cs_col3
      color cs_col6
