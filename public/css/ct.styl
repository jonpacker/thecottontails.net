@import 'nib'

cs_col1 = #BD4932 // colour
cs_col2 = #FFFAD5 // light fg
cs_col3 = #FFD34E // less light fg
cs_col4 = #DB9E36 // colour
cs_col5 = #105B63 // colour
cs_col6 = #211f1c // dark bg

cs_font_serif()
  font-family "Playfair Display"
  font-style italic
cs_font_huge()
  font-family "lust-script", "Lust Script"
  font-style normal
  font-weight normal
  text-rendering optimizeLegibility
cs_font_body()
