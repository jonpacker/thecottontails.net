@import 'nib'

cs_col1 = #BD4932 // colour
cs_col2 = #FFFAD5 // light fg
cs_col3 = #FFD34E // less light fg
cs_col4 = #DB9E36 // colour
cs_col5 = #105B63 // colour
cs_col6 = #211f1c // dark bg

body,html
  margin 0px
  padding 0px

body
  min-width 320px
  background-color cs_col6

#index #hero
  width 100%
  height 500px
  padding-top 80px
  background-image url(/img/dd.jpg)
  background-size cover
  background-position center center
  position relative
  
  #hero-title
    background-image url(/img/title.svg)
    background-size contain
    background-position center
    background-repeat no-repeat
    width 65%
    height 100%
    margin 0 auto

#lokaler #hero
  background-color cs_col5
  position relative
  color cs_col2

  .not-bg
    padding 80px 30%
    text-align center
  .bg
    background-image url(/img/lokaler.jpg)
    opacity 0.1

  h1
    font-size 54px
    font-family "Playfair Display"
    font-style italic
    padding-bottom 20px
    margin-bottom 60px
    border-bottom 2px solid cs_col2

  .not-bg p
    font-family "Brandon Grotesque"
    font-size 26px
    line-height 42px
    padding 0px 10%
    color cs_col3

  #entry
    padding 0px 10% 80px
    position relative
    clearfix()

    .map
      width 55%
      margin-right 5%
      float left
      img 
        width 100%
    .entrydesc
      width 40%
      font-family "Brandon Grotesque"
      font-size 22px
      line-height 32px
      color cs_col2
      float right
      padding 40px 0px
      border-top 2px solid cs_col2
      border-bottom @border-top

      p
        margin 0px
        padding 0px


#events
  width 100%
  padding 80px 20%
  background-color cs_col2
  color cs_col6
  position relative

  h1
    font-family "Playfair Display"
    font-style italic
    font-size 54px
    margin-bottom 50px

  p.empty
    font-family "Brandon Grotesque"
    font-size 24px

  .event
    width 50%
    margin-bottom 40px
    box-sizing border-box
    border 6px solid cs_col1
    padding 50px
    display block
    text-decoration none
    color cs_col6
    position relative

    &:hover
      background-color cs_col1
      color cs_col2
      .meta
        color cs_col3

    h2
      margin-top 0px
      font-family "Playfair Display"
      font-weight normal
      font-style italic
      font-size 42px

    .fa-external-link
      position absolute
      height 60px
      line-height 60px
      margin-top -30px
      top 50%
      right 50px
      color cs_col2
      font-size 45px

    .meta
      font-family "Brandon Grotesque"
      font-size 24px
      line-height 32px
      color cs_col5
      text-decoration none

      .fa
        width 30px
        display inline-block

#about
  & > div
    padding 80px 10%
    clearfix()
    color cs_col6

  h1
    font-family "Playfair Display"
    font-size 54px
    font-style italic

  p 
    font-family "Brandon Grotesque"
    font-size 24px
    line-height 32px
    padding 0px 5%

  #cottontails 
    background-color cs_col2
    color cs_col6
    h1
      margin-bottom 60px
    .logo
      float left
      margin-top -20px
      width 200px
      margin-right 40px

  #heading
    padding 80px 0px

  .dance, .dance-head
    background-color cs_col6
    color cs_col2
    padding 0px
    position relative
    width 100%
    text-align center

    h1.really-big
      font-size 128px
      font-weight normal
      border-bottom 2px solid cs_col2
      width 50%
      margin 0 auto
      padding-bottom 40px

  .dance
    &:after
      padding-top 50%
      content ''
      display block

    &#lindyhop
      video
        margin-top 1%

    .videobg
      width 100%
      z-index 0
      position absolute
      left 0
      overflow hidden
      opacity 1
      transition opacity 150ms ease-out

      video
        width 100%
        margin-top -2.25%

    .not-videobg
      clearfix()
      position absolute
      z-index 10
      width 100%
      height 100%
      box-sizing border-box
      text-align center

      &:before
        content ''
        display inline-block
        height 100%
        vertical-align middle

      .caption
        display inline-block
        vertical-align middle
        height 60%
        width 50%
        position relative
        transition opacity 150ms ease-out
        opacity 0

        h1
          margin-top 0px
          font-size 84px
        p 
          font-size 24px
          line-height 32px
          padding 0px


      .unmute-button
        font-size 30px
        position absolute
        top 40px
        cursor pointer
        left 40px
        color cs_col3
        .fa-inverse
          color cs_col6


    h1.while-playing
      font-size 34px
      font-family "Playfair Display"
      font-style italic
      text-align right
      position absolute
      top 40px
      right 40px
      width 40%
      opacity 1
      margin 0px
      padding 0px
      transition opacity 150ms ease-out


    &.muted
      .videobg
        opacity 0.1
      h1.while-playing
        opacity 0


  .dance.muted
    .caption
      opacity 1

  .video
    margin-left 5%
    float left
    width 44%

    video
      width 100%
      &[muted]
        opacity 0.5

  .text
    margin-right 5%
    float right
    width 44%
    p
      margin-top 0px

#nav
  width 100%
  height 80px
  background-color cs_col2

  color cs_col6
  font-family "Brandon Grotesque"
  font-size 22px

  a
    text-decoration none
    border none
    color inherit

  .left
    float left
    height 80px
    padding-left 20px
    .logo
      display block
      background-image url(/img/ct_new_nothe.svg)
      background-size contain
      background-repeat no-repeat
      background-position left center
      width 100px
      height 60px
      margin 10px 20px
  .right
    float right
    height 80px
    text-align right
    padding-right 20px

  .nav
    .item
      vertical-align top
      display inline-block
      height 50px
      margin-top 15px
      margin-left 5px
      margin-right 5px
      line-height 44px
      box-sizing border-box
      padding 3px 18px

      &:hover
        border-bottom 3px solid cs_col4
        padding-bottom 0px

      &.active
        padding 0px 15px
        border 3px solid cs_col5
        color cs_col5

.index + #nav
  position absolute
  background transparent
  left 0px
  top 0px
  z-index 5

#portal
  background-color cs_col5
  width 100%
  padding 80px 20%
  box-sizing border-box
  clearfix()
  background-image url(/img/ct_new_subtle.svg)
  background-size 140%
  background-position 50% 50%
  background-repeat no-repeat

  padding-bottom 80px + 240px

  @media (max-width: 1024px)
    padding 80px 10%

  @media (max-width: 1024px)
    padding 80px 20%

  @media (max-width: 480px)
    padding 80px 10%

  .box
    width 47%
    height 400px
    background-color cs_col4
    color cs_col3
    text-align center
    font-size 22px
    font-family "Brandon Grotesque"
    font-weight normal
    margin-top 50px
    clear none
    position relative
    background-color cs_col2
    display block
    
    &:hover
      background-color cs_col3

    .image
      width 100%
      height 100%
      position absolute
      left 0px
      top 0px
      background-position center
      background-repeat no-repeat
      background-size cover
      opacity 0.5

    .inner-box 
      color cs_col6
      width 80%
      height 40%
      border 6px solid cs_col6
      position absolute
      top 30%
      left 10%
      box-sizing border-box

      h1
        margin 0px
        height 50px
        line-height 50px
        text-align center
        position absolute
        top 50%
        width 100%
        margin-top -25px


    &:nth-child(2n)
      float right
    &:nth-child(2n-1)
      float left
    &:nth-child(1)
      margin-top 0px
    &:nth-child(2)
      margin-top 150px

    @media (max-width: 768px)
      width 100%
      margin-top 40px
      &:nth-child(2n)
        float none
      &:nth-child(2n-1)
        float none
      &:nth-child(1)
        margin-top 0px
      &:nth-child(2)
        margin-top 40px



    h1
      margin 0px

#kurs #about
  width 100%
  padding 80px 20%
  box-sizing border-box
  background-color cs_col2

  h1
    font-size 54px 
    font-family "Playfair Display"
    font-style italic

  p
    padding 0px 5%
    font-family "Brandon Grotesque"
    font-size 28px
    line-height 36px

  .registration
    display inline-block
    padding 15px 40px
    margin 20px 0px
    font-size 36px
    border 5px solid cs_col1
    font-family "Brandon Grotesque"
    font-weight bold
    &:hover
      color cs_col2
      background-color cs_col1

#kurs #levels
  width 100%
  padding-bottom 80px
  background-color cs_col2
  color cs_col6 
  clearfix()

  font-family "Brandon Grotesque"
  font-size 22px

  .main-overview
    padding 0px 5%
    font-family "Brandon Grotesque"
    font-size 28px
    line-height 36px
  .halfbox
    background-color cs_col3
    color cs_col6

#index #about
  width 100%
  display block
  position relative
  height 0px
  overflow visible

  .about-box
    color cs_col6
    background-image url(/img/fun.jpg)
    background-position center
    background-size cover
    font-family "Playfair Display"
    font-style italic
    font-size 32px
    text-align center
    width 80%
    margin-left -40%
    box-sizing border-box
    padding 20px 50px
    height 400px
    position absolute
    left 50%
    top -200px
    outline 6px solid cs_col6
    outline-offset 40px

    .blurb
      width 55%
      margin 0 auto
      padding 80px 0px
      p
        font-family inherit
        font-size inherit
        margin 0px
        padding 0px
        line-height inherit

      @media(max-width: 1024px)
        width 75%

      @media(max-width: 480px)
        font-size 24px
        width 85%
        padding 60px 0px

@media(max-width: 1280px)
  #index #about
    height auto
    .about-box
      outline none
      top 0px
      width 100%
      height auto
      margin-left 0px
      left 0px
      position relative
  #index #portal
    padding-bottom 80px
  #index #feed
    margin-top 0px
    padding-top 80px

.content + .content
  margin-top 80px
.content
  h1
    font-family "Playfair Display"
    font-style italic
    font-size 54px
    
  width 60%
  margin 0 auto

  clearfix()

  &.wider
    width 80%

#feed
  padding 80px 0px
  padding-top 240px + 80px
  width 100%
  background-color cs_col1
  clearfix()

  .content
    color cs_col2

    @media (max-width: 480px)
      width 80%

    .stories
      padding 20px
      border-left 1px solid cs_col3

    .news
      margin-bottom 40px
      &:last-child
        margin-bottom 0px
      .story
        font-family "Playfair Display"
        font-size 22px
        font-style italic
        color inherit
        text-decoration none

        .fa
          display inline-block
          margin-left 10px
          opacity 0.75
          font-size 0.8em
          color inherit

      .date 
        font-family "Brandon Grotesque"
        font-size 16px
        color cs_col3
        position relative
        padding-left 20px
        margin-top 8px
        &:before
          content ''
          position absolute
          width 30px
          left -21px
          top 50%
          height 10px
          margin-top -10px
          border-bottom-left-radius 5px
          border-bottom 1px solid cs_col3
          border-left @border-bottom

#playlists
  background-color cs_col2
  color cs_col5
  padding 80px 20%

  h1 
    font-size 54px
    font-family "Playfair Display"
    font-style italic

  p
    font-size 24px
    line-height 32px
    font-family "Brandon Grotesque"
  .playlists
    margin-top 80px

  .playlist
    margin 20px auto
    box-sizing border-box
    width 92%
    display block
    text-decoration none
    color inherit
