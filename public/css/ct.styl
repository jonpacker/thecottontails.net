body,html
  margin 0px
  padding 0px

#hero
  width 100%
  height 500px
  background-image url(/img/dd.jpg)
  background-size cover
  background-position center center
  position relative
  
  #hero-title
    background-image url(/img/title.svg)
    background-size contain
    background-position center
    background-repeat no-repeat
    width 65%
    height 100%
    margin 0 auto

#nav
  width 100%
  height 80px
  background-color #FFFAD5
  color #211f1c
  font-family "Brandon Grotesque"
  font-size 22px

  .left
    float left
    height 80px
    padding-left 20px
    .logo
      background-image url(/img/ct_new_nothe.svg)
      background-size contain
      background-repeat no-repeat
      background-position left center
      width 100px
      height 60px
      margin 10px 20px
  .right
    float right
    height 80px
    text-align right
    padding-right 20px

  .nav
    .item
      vertical-align top
      display inline-block
      height 80px
      line-height 80px
      padding 0px 20px

#about
  width 100%
  display block
  color #211f1c
  background-color #FFFAD5
  font-family "Playfair Display"
  font-style italic
  font-size 32px
  text-align center
  background-image url(/img/ct_new_subtle.svg)
  background-size 140%
  background-position 50% 50%
  background-repeat no-repeat

  .blurb
    width 50%
    margin 0 auto
    padding 80px 0px
