body,html
  margin 0px
  padding 0px

#hero
  width 100%
  height 500px
  background-image url(/img/dd.jpg)
  background-size cover
  background-position center center

#nav
  width 100%
  height 80px
  background-color #f4f4de
  color #211f1c
  font-family "Montserrat Regular", Montserrat
  font-size 18px

  .left
    float left
    height 80px
  .right
    float right
    height 80px
    text-align right
    padding-right 20px

  .nav
    .item
      vertical-align top
      display inline-block
      height 80px
      line-height 80px
      padding 0px 20px
